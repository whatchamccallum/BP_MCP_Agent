# Breaking Point MCP Agent Environment Variables
# Copy this file to .env and modify as needed

# API Connection Settings
BP_AGENT_API_HOST=breaking-point.example.com
BP_AGENT_API_TIMEOUT=60
BP_AGENT_API_VERIFY_SSL=false
BP_AGENT_API_RETRIES=3
BP_AGENT_API_RETRY_DELAY=5

# Credentials (more secure than storing in config file)
BP_AGENT_USERNAME=admin
BP_AGENT_PASSWORD=password

# Cache Settings
BP_AGENT_CACHE_ENABLED=true
BP_AGENT_CACHE_TTL=3600
BP_AGENT_CACHE_DIR=~/.bp_agent/cache
BP_AGENT_CACHE_COMPRESSION=false

# Analyzer Settings
BP_AGENT_ANALYZER_DEFAULT_REPORT_TYPE=standard
BP_AGENT_ANALYZER_DEFAULT_OUTPUT_FORMAT=html
BP_AGENT_ANALYZER_DEFAULT_OUTPUT_DIR=./reports

# Logging Settings
BP_AGENT_LOGGING_LEVEL=INFO
BP_AGENT_LOGGING_FILE=~/.bp_agent/logs/agent.log
BP_AGENT_LOGGING_CONSOLE=true
